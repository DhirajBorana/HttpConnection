<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="employee"
            type="com.example.httpconn.Employee" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/name"
            style="@style/TextAppearance.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="@{employee.name}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="John Nixon" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/age_label"
            style="@style/TextAppearance.Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/age_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/age"
            style="@style/TextAppearance.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{employee.age}"
            app:layout_constraintStart_toEndOf="@+id/age_label"
            app:layout_constraintTop_toBottomOf="@+id/name"
            tools:text="24" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/salary_label"
            style="@style/TextAppearance.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@string/salary_label"
            app:layout_constraintStart_toEndOf="@+id/age"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/salary"
            style="@style/TextAppearance.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{employee.salary}"
            app:layout_constraintStart_toEndOf="@+id/salary_label"
            app:layout_constraintTop_toBottomOf="@+id/name"
            tools:text="320000" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>